
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="main-content">
    <div class="card">
        <div class="card-body">
            <h4>DANH SÁCH TÀI KHOẢN BỊ KHÓA DO ĐĂNG NHẬP SAI NHIỀU LẦN</h4>
            <div class="m-t-25">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Email</th>
                                <th scope="col">Username</th>
                                <th scope="col">Password</th>
                                <th scope="col">Tên Quyền</th>
                                <th scope="col">Thời gian khóa</th>
                            </tr>
                        </thead>
                        <tbody id="showdata">
                           
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>

    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script>
        load();

        async function Logout() {
            const res = await $.ajax({
                url: "/api/logout",
                type: "POST"
            });

            if (res.success) {
                Swal.fire({
                    title: "Goodbye!",
                    text: res.message,
                    icon: "success"
                }).then(() => {
                    window.location.href = res.url;
                });
            } else {
                alersweet("error", "Có lỗi xảy ra khi đăng xuất.");
            }
        }

        let idleTime = 0;

        setInterval(() => {
            idleTime++;
            if (idleTime >= 1) {
                logoutSession();
            }
        }, 60000);

        $(document).on("mousemove keypress click", function () {
            idleTime = 0;
        });

        async function logoutSession() {
            const res = await $.ajax({
                url: "/api/logout",
                type: "POST"
            });

            if (res.success) {
                Swal.fire({
                    title: "Session Timeout",
                    text: "Bạn đã bị đăng xuất do không hoạt động trong 1 phút.",
                    icon: "info"
                }).then(() => {
                    window.location.href = res.url;
                });
            } else {
                alersweet("error", "Có lỗi xảy ra khi đăng xuất.");
            }
        }
        async function load() {
            const res = await $.ajax({
                url: '/api/get_full_tk_bi_khoa',
                type: 'GET',
            });
            var body = $("#showdata");
            body.empty();
            let html = "";
            if (res.success) {
                res.data.forEach(function (items, index) {
                    html += `
                        <tr>
                            <th scope="row">${index + 1}</th>
                            <td>${items.email}</td>
                            <td>${items.username}</td>
                            <td>${items.password}</td>
                            <td>${items.ten_role}</td>
                            <td>${unixTimestampToDate(items.Thoi_gian_khoa)}</td>
                        </tr>
                        `;
                    body.html(html);
                })

            }
            else {
                html += `
                        <tr>
                            <th scope="row">${res.message}</th>
 
                        </tr>
                        `;
                body.html(html);
            }
        }
        function unixTimestampToDate(unixTimestamp) {
            var date = new Date(unixTimestamp * 1000);
            var weekdays = ['Chủ Nhật', 'Thứ 2', 'Thứ 3', 'Thứ 4', 'Thứ 5', 'Thứ 6', 'Thứ 7'];
            var dayOfWeek = weekdays[date.getDay()];
            var month = ("0" + (date.getMonth() + 1)).slice(-2);
            var day = ("0" + date.getDate()).slice(-2);
            var year = date.getFullYear();
            var hours = ("0" + date.getHours()).slice(-2);
            var minutes = ("0" + date.getMinutes()).slice(-2);
            var seconds = ("0" + date.getSeconds()).slice(-2);
            var formattedDate = dayOfWeek + ', ' + day + "-" + month + "-" + year + " " + ', ' + hours + ":" + minutes + ":" + seconds;
            return formattedDate;
        }
    </script>